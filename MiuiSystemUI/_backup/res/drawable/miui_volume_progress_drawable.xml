<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/miui_volume_bg_color" />
            <corners android:radius="@dimen/miui_volume_bg_radius" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip android:gravity="start" android:clipOrientation="horizontal">
            <shape android:shape="rectangle">
                <solid android:color="?miui:colorAccent" />
                <corners android:radius="@dimen/miui_volume_bg_radius" />
            </shape>
        </clip>
    </item>
</layer-list>